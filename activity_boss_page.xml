<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/design_food"
    tools:context=".BossPage"
    >

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_marginStart="70sp"
        android:orientation="vertical">



        <EditText
            android:id="@+id/UpdatedSum"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="30sp"
            android:background="@color/white"
            android:hint="Write Restourant  Summary"></EditText>

        <Spinner
            android:id="@+id/UpdSpin"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="30sp"
            android:background="@color/white" />

        <Button
            android:id="@+id/UpdateRes"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="30sp"
            android:text="Update Restourant"></Button>
    </LinearLayout>




</RelativeLayout>
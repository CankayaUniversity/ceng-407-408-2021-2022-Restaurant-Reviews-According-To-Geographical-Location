<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2D2BD"
    tools:context=".AdminPage">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="70sp"
        >
        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="30sp"
            android:background="@color/white"
            android:hint="Write Deleted Id"
            android:id="@+id/Deleted"
            >
        </EditText>
        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="30sp"
            android:text="Delete Review"
            android:id="@+id/DelRev"
            ></Button>
        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="30sp"
            android:text="Delete User"
            android:id="@+id/DelUser"
        ></Button>
        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="30sp"
            android:text="Delete Restourant"
            android:id="@+id/DelRest"
            ></Button>
        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="30sp"
            android:background="@color/white"
            android:hint="Write Restourant Name"
            android:id="@+id/RestourantName"
            >
        </EditText>
        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="30sp"
            android:background="@color/white"
            android:hint="Write Restourant  Summary"
            android:id="@+id/RestourantSummary"
            >
        </EditText>
        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="30sp"
            android:text="Add Restourant"
            android:id="@+id/AddRest"
            ></Button>
    </LinearLayout>

    
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/design_food"
    tools:context=".SettingsPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/profilepic"
            android:layout_marginStart="135dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp" />

        <EditText
            android:id="@+id/NewID"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:hint="Enter New ID:" />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/NewUserPassword"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginStart="65dp"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                android:hint="Enter New Password:" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/NewPasswordCntrl"
                android:layout_width="255dp"
                android:layout_height="50dp"
                android:layout_marginStart="65dp"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                android:hint="Congfirm New Password:" />
        </com.google.android.material.textfield.TextInputLayout>
        >

        <Button
            android:id="@+id/Güncelle"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginStart="85dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/teal_700"
            android:text="GÜncelle"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <Button
            android:id="@+id/UploadImage"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginStart="85dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/teal_700"
            android:text="Resmi Değiştir"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>



</RelativeLayout>
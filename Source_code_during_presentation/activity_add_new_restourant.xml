<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/design_food"
    tools:context=".AddNewRestourant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:textStyle="bold"
            android:text="Restourant Name">
        </TextView>
        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:id="@+id/Name"
            android:hint="Enter Restourant Name"
        ></EditText>
        <TextView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:textStyle="bold"
            android:text="Restourant's Starting Rate">
        </TextView>
        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:id="@+id/Rate"
            android:hint="Enter Restourant Rate"
            ></EditText>

       <TextView
            android:layout_width="200dp"
            android:layout_height="20dp"
           android:textStyle="bold"
            android:text="Enter Restourant Summary">
        </TextView>
        <EditText
            android:layout_width="230dp"
            android:layout_height="350dp"
            android:background="@color/white"
            android:id="@+id/Summary"
            ></EditText>
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:id="@+id/SendBtn"
            android:text="Send"
            ></Button>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
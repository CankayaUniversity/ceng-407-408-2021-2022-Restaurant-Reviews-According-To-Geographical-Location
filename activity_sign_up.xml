<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/design_food"
    tools:context=".SignUp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="22dp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:text="SÄ±gn_Up Screen"
            >

        </TextView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/applicationsign"
            >
        </ImageView>
        <EditText
            android:layout_marginLeft="45dp"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:hint="Enter ID:"
            android:background="@color/white"
            android:id="@+id/UserId"
            />
        <EditText
            android:layout_marginLeft="45dp"
            android:layout_marginTop="30dp"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="Enter E_Mail Address:"
            android:background="@color/white"
            android:id="@+id/UserEmail"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            >
        <EditText
            android:layout_marginLeft="45dp"
            android:layout_marginTop="30dp"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="Enter Password:"
            android:background="@color/white"
            android:id="@+id/UserPassword"
            />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            >
        <EditText
            android:layout_marginLeft="45dp"
            android:layout_marginTop="30dp"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="Congfirm Password:"
            android:background="@color/white"
            android:id="@+id/PasswordCntrl"
            />
        </com.google.android.material.textfield.TextInputLayout>>

            <Button
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="65dp"
                android:backgroundTint="@color/teal_700"
                android:text="Enter"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/EnterBtn"
                >
            </Button>
    </LinearLayout>



</RelativeLayout>